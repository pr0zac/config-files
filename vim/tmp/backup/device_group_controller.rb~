class DeviceGroupController < CrudController
    before_filter :verify_od_apns
    
    def initialize
        super
        @@model = DeviceGroup
    end
    
    def add_child_device_group
        post_data = request.body.read
        incoming_request = JSON.parse(post_data)
        result = DeviceGroupHelper.add_child_device_group(params[:id], incoming_request)
        render :json => { :result => result }
    end
    
    def add_device
        post_data = request.body.read
        incoming_request = JSON.parse(post_data)
        result = DeviceGroupHelper.add_device(params[:id], incoming_request)
        render :json => { :result => result }

end
