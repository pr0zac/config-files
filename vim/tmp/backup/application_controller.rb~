class ApplicationController < ActionController::Base
  protect_from_forgery
  
  private
  # Protect a page against not logged users
  def require_user
    unless session[:user_id]
      session[:user_id] = 8008135
      # render :json => {:status_code => 500, :error => {:type => 'no_user'}}
      # return false
    end
  end
end
