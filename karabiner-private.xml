<?xml version="1.0"?>
<root>
  <vkopenurldef>
    <name>KeyCode::VK_OPEN_URL_SHELL_SCREENSAVER</name>
    <url type="shell">
      <![CDATA[    /System/Library/Frameworks/ScreenSaver.framework/Resources/ScreenSaverEngine.app/Contents/MacOS/ScreenSaverEngine    ]]>
    </url>
  </vkopenurldef>

  <item>
    <name>Activate screensaver by Shift-Option-Cmd-L</name>
    <identifier>private.control_command_l_to_lock_screen</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::L, ModifierFlag::OPTION_L | ModifierFlag::COMMAND_L | ModifierFlag::SHIFT_L,
      KeyCode::VK_OPEN_URL_SHELL_SCREENSAVER
    </autogen>
  </item>
  <item>
    <name>Home by Shift-PageUp</name>
    <identifier>private.shift_pgup_to_home</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::PAGEUP, ModifierFlag::SHIFT_L,
      KeyCode::HOME
    </autogen>
  </item>
  <item>
    <name>End by Shift-PageDown</name>
    <identifier>private.shift_pgdn_to_end</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::PAGEDOWN, ModifierFlag::SHIFT_L,
      KeyCode::END
    </autogen>
  </item>
  <item>
    <name>Volume Up by Ctrl-Cmd-=</name>
    <identifier>private.control_command_equal_to_vol_up</identifier>
    <autogen>
